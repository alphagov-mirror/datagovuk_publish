<div class="tabs__content">
  <section class="dgu-show-all">
    <div class="table-title">
      <h2 class="heading-medium" id="update-datasets">
        <%= @tasks.count =%> datasets need to be updated
      </h2>
    </div>
    <table>
      <thead>
        <tr>
          <th class="sortable-column__heading name">
            <%= link_to "Name",
            tasks_path(update_sort_by: @update_name_sort,
                       fix_sort_by: params[:fix_sort_by]) + "#update-datasets",
                       class:"sortable-column__heading__ascending" %>
          </th>
          <th class="sortable-column__heading update-by">
            <%=link_to "Update by",
            tasks_path(update_sort_by: @date_sort,
                       fix_sort_by: params[:fix_sort_by]) + "#update-datasets",
                       class:"sortable-column__heading__ascending" %>
          </th>
          <th class="actions">
            <span class="visuallyhidden">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody>

        <% sorted_update_tasks.each do |task| %>
          <tr class="dgu-show-all__item">
            <th>
              <a href=""><%= task.description =%></a>
            </th>
            <td>
              <span class="update-date"><%=task.created_at.strftime("%d %b %Y")%></span>
              <div class="overdue">
                Overdue
              </div>
            </td>
            <td class="actions">
              <a class="update" href="">Update
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td><a class="dgu-show-all__toggle" style="display:none">Show all</a></td>
        </tr>
      </tfoot>
    </table>
  </section>

  <section class="dgu-show-all">
    <div class="table-title">
      <h2 class="heading-medium" id="broken-datasets">
        <%=broken_dataset_count=%> datasets have broken data links
      </h2>
    </div>
    <table>
      <thead>
        <tr>
          <th class="sortable-column__heading name">
            <%=link_to "Name",
            tasks_path(fix_sort_by: @fix_name_sort,
                       update_sort_by: params[:update_sort_by]) + "#broken-datasets",
                       class:"sortable-column__heading__ascending" %>
          </th>
          <th class="sortable-column broken-links">
            <%=link_to "Broken links",
            tasks_path(fix_sort_by: @count_sort,
                       update_sort_by: params[:update_sort_by]) + "#broken-datasets",
                       class:"sortable-column__heading__ascending link-count" %>
          </th>
          <th class="actions">
            <span class="visuallyhidden">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody>
        <% sorted_fix_tasks.each do |dataset| %>
          <tr class="dgu-show-all__item">
            <th>
              <a href=""><%=dataset.title=%></a>
            </th>
            <td class="broken-links"><div class="link-count">3</div></td>
            <td class="actions">
              <a class="update" href="">Fix</a>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td><a class="dgu-show-all__toggle" style="display:none">Show all</a>
          </td>
        </tr>
      </tfoot>
    </table>
  </section>

  <div id="stats" class="js-hidden" style="display: none">
    <div id="orgs" style="display: none">{{ orgs }}</div>
    <div id="api-endpoint" style="display: none">{{ api_endpoint }}</div>
    <h2 class="heading-medium">Most popular</h2>
    <table>
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Downloads</th>
        </tr>
      </thead>
      <tbody>
        <tr id="row-template" style="display: none">
          <td class="stats-title"></td>
          <td>
            <span class="stats-downloads"></span>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
