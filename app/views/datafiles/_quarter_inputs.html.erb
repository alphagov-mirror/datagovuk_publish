<div class="form-group">
  <h2 class="form-label-bold">Time period for this link</h2>
  <fieldset>
    <legend>Quarter</legend>

    <div class="multiple-choice">
      <%= radio_button_tag 'datafile[quarter]', '1', @datafile.quarter == 1, id: 'q1' %>
      <label for="q1">Q1 (April to June)</label>
    </div>

    <div class="multiple-choice">
      <%= radio_button_tag 'datafile[quarter]', '2', @datafile.quarter == 2, id: 'q2' %>
      <label for="q2">Q2 (July to September)</label>
    </div>

    <div class="multiple-choice">
      <%= radio_button_tag 'datafile[quarter]', '3', @datafile.quarter == 3, id: 'q3' %>
      <label for="q3">Q3 (October to December)</label>
    </div>

    <div class="multiple-choice">
      <%= radio_button_tag 'datafile[quarter]', '4', @datafile.quarter == 4, id: 'q4' %>
      <label for="q4">Q4 (January to March)</label>
    </div>
  </fieldset>
</div>

<div class="form-group">
  <fieldset>
    <legend class="visuallyhidden">Year</legend>
    <div class="form-date">
      <div id="year_form_group" class="form-group form-group-year ">
        <label class="form-label-bold" for="period_year">Year</label>
        <%= text_field_tag 'datafile[year]', @datafile.start_year, id: "period_year", class: "form-control" %>
      </div>
    </div>
  </fieldset>
</div>
