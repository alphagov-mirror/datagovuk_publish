<div class="form-group" id="<%= period %>_date_form_group">
  <fieldset>
    <legend>
      <span class="form-label-bold">
          <%= period.humanize %> Date
          <span class="form-hint">For example, 31 3 2016</span>
      </span>
    </legend>

    <div class="form-date">
      <div class="form-group form-group-day">
        <label for="#<%= period %>_day">Day</label>
        <%= text_field_tag "datafile[#{period}_day]", @datafile.dates[period][:day], id: "#{period}_day", class: "form-control" %>
      </div>

      <div class="form-group form-group-month">
        <label for="<%= period %>_month">Month</label>
        <%= text_field_tag "datafile[#{period}_month]", @datafile.dates[period][:month], id: "#{period}_month", class: "form-control" %>
      </div>

      <div class="form-group form-group-year">
        <label for="<%= period %>_year">year</label>
        <%= text_field_tag "datafile[#{period}_year]", @datafile.dates[period][:year], id: "#{period}_year", class: "form-control" %>
      </div>
    </div>
  </fieldset>
</div>
