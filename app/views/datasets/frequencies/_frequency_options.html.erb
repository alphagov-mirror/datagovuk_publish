<div class="form-group">
  <fieldset>
    <legend class="visually-hidden">How frequently is this dataset updated?</legend>

    <%= dataset_field form, @dataset,
    name: 'frequency',
    input_type: :radio_button,
    label: 'Daily',
    value: 'daily' %>

    <%= dataset_field form, @dataset,
    name: 'frequency',
    input_type: :radio_button,
    label: 'Monthly',
    value: 'monthly' %>

    <%= dataset_field form, @dataset,
    name: 'frequency',
    input_type: :radio_button,
    label: 'Quarterly',
    value: 'quarterly' %>

    <%= dataset_field form, @dataset,
    name: 'frequency',
    input_type: :radio_button,
    label: 'Annually (January to December)',
    value: 'annually' %>

    <%= dataset_field form, @dataset,
    name: 'frequency',
    input_type: :radio_button,
    label: 'Annually (financial year April to March)',
    value: 'financial-year' %>

    <%= dataset_field form, @dataset,
    name: 'frequency',
    input_type: :radio_button,
    label: 'One-off',
    value: 'never' %>
  </fieldset>
</div>
