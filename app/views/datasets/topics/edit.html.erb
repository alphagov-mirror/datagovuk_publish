<% content_for :page_title do %>
  Edit topic -
<% end %>

<div class="datasets">
  <%= render partial: 'datasets/errors', locals: { model: @dataset } %>

  <h1 class="heading-large" id="topic_id">Choose a topic for this dataset</h1>

  <%= form_for @dataset, url: update_dataset_topic_path(@dataset.uuid, @dataset.name) do |f| %>
    <div class="form-group">
      <fieldset>
        <legend class="visually-hidden">Choose a topic for this dataset</legend>

        <% @topics.each do |topic| %>
          <%= dataset_field f, @dataset,
                            name: 'topic_id',
                            input_type: :radio_button,
                            label: topic.title,
                            value: topic.id %>
        <% end %>
      </fieldset>
    </div>

    <div class="form-group">
      <p><%= f.submit 'Save and continue', class: 'button' %></p>
      <p><%= link_to 'Cancel', dataset_path(@dataset.uuid, @dataset.name) %></p>
    </div>
  <% end %>
</div>
