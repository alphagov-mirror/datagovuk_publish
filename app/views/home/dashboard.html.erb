<% content_for :page_title do %>
  What's available in Publish
<% end %>

<h1 class="heading-large">
  What's available in Publish right now
</h1>

<div class="grid-row">
  <div class="column-one-third">
    <div class="data">
      <span class="data-item bold-xlarge"><%= number_with_delimiter(@total_datasets) %></span>
      <span class="data-item bold-xsmall">datasets</span>
    </div>
  </div>

  <div class="column-one-third">
    <div class="data">
      <span class="data-item bold-xlarge"><%= number_with_delimiter(@total_published_datasets) %></span>
      <span class="data-item bold-xsmall">published datasets</span>
    </div>
  </div>

  <div class="column-one-third">
    <div class="data">
      <span class="data-item bold-xlarge"><%= number_with_delimiter(@total_draft_datasets) %></span>
      <span class="data-item bold-xsmall">draft datasets</span>
    </div>
  </div>
</div>

<div class="grid-row">
  <div class="column-one-third">
    <div class="data">
      <span class="data-item bold-xlarge"><%= number_with_delimiter(@total_datafiles) %></span>
      <span class="data-item bold-xsmall">datafiles</span>
    </div>
  </div>

  <div class="column-one-third">
    <div class="data">
      <span class="data-item bold-xlarge"><%= number_with_delimiter(@total_publishers) %></span>
      <span class="data-item bold-xsmall">Publishers</span>
    </div>
  </div>
</div>

<hr />

<div class="grid-row">
  <div class="column-one-half">
    <table>
      <caption class="heading-small">Datafile count by format</caption>
      <tbody>
        <% @datafile_count_by_format.each do |format, format_count| %>
          <tr>
            <th><%= format %></th>
            <td><%= format_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
