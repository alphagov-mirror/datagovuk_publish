<% content_for :head do %>
  <%= stylesheet_link_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<% end %>
<% content_for :page_title do %>
  Data.gov.uk - Publish Data
<% end %>
<% content_for :homepage_url do %>/<% end %>
<% content_for :global_header_text do %>
  data.gov.uk<span class="separator"></span>publish
<% end %>
<% content_for :inside_header do %>
  <!-- to hold options for authenticated users -->
<% end %>
<% content_for :content do %>
  <div id="skiplink-container">
    <div>
      <a href="#content" class="skiplink">Skip to main content</a>
    </div>
  </div>

  <%= yield %>

  <div id="global-app-error" class="app-error hidden"></div>

  <script>if (typeof window.GOVUK === 'undefined') document.body.className = document.body.className.replace('js-enabled', '');</script>


<% end %>
<%= render template: 'layouts/govuk_template' %>
