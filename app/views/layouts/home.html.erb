<%= render 'layouts/staging_ribbon' if Rails.env.staging? %>

<% content_for :head do %>
  <%= stylesheet_link_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<% end %>
<% content_for :page_title do %>
  Data.gov.uk - Publish Data
<% end %>
<% content_for :homepage_url do %>/<% end %>
<% content_for :global_header_text do %>
  data.gov.uk<span class="separator"></span>publish
<% end %>
<% content_for :header_class do %>with-proposition<% end %>
<% content_for :proposition_header do %>
  <!-- to hold options for authenticated users -->
  <%= render partial: 'layouts/proposition_header' %>
<% end %>
<% content_for :content do %>
  <div id="skiplink-container">
    <div>
      <a href="#content" class="skiplink">Skip to main content</a>
    </div>
  </div>
  <main role="main" tabindex="-1">
    <div class="masthead">
      <div class="grid-row inner">
        <div class="column-two-thirds">
          <h1 class="heading-xlarge">
            Publish and update data for your organisation
          </h1>
          <p class="lede">
            You must create an account to use this service.
          </p>
          <p class="lede">
            If you already have an account, sign in to publish a new dataset
            or update an existing one.
          </p>

          <a class="button button-get-started" href="<%= new_user_session_path %>" role="button">
            Sign in
          </a>
          <span class="login-white">
            or <a href="">create an account</a>
          </span>
        </div>
      </div>
    </div>

    <div class="grid-row contact">
      <div class="column-two-thirds">
        <h2 class="heading-large">Contact the data.gov.uk team</h2>
        <p>
          data.gov.uk is built and supported by a full time team at
          Government Digital Service.
        </p>
        <p>To contact the team email:</p>
        <p><a href="mailto:team@data.gov.uk">team@data.gov.uk</a></p>
      </div>
    </div>

  </main>


  <div id="global-app-error" class="app-error hidden"></div>

  <script>if (typeof window.GOVUK === 'undefined') document.body.className = document.body.className.replace('js-enabled', '');</script>

<% end %>
<%= render template: 'layouts/govuk_template' %>
