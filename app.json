{
  "name": "publish_data_beta",
  "scripts": {
    "postdeploy": "rake db:migrate; rake db:seed; rake search:reindex"
  },
  "env": {
    "RAILS_ENV": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "GDS_SSO_STRATEGY": {
      "required": true
    },
    "FIND_URL": {
      "required": true
    },
    "OAUTH_ID": {
      "required": false
    },
    "OAUTH_SECRET": {
      "required": false
    },
    "PLEK_SERVICE_SIGNON_URI": {
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    "bonsai"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
